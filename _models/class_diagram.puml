@startuml

class Conway {
  + run(args: String[])
}

abstract Cell {
  + isStateSwitching(): Boolean
  + switchState()
}

abstract Board {
  + printBoard()
}

abstract Simulator {
  + simulate(board: ConwayBoard)
}

abstract GameArguments{
	+ loadArguments()
}

class ConwayCell {
  - neighbors: Cell[]
  + isStateSwitching(): Boolean
  + switchState()
}

class ConwayBoard {
  - cells: ConwayCell[][]
  + printBoard()
  + getNeighbors(cell: Cell): Cell[]
}

class ConwaySimulator {
  + simulate(board: ConwayBoard)
}

class ConwayGameArguments{
	+ loadArguments()
}

Conway *--> ConwayBoard
Conway *--> ConwaySimulator
Conway *--> ConwayGameArguments
Cell <|-- ConwayCell
Board <|-- ConwayBoard
Simulator <|-- ConwaySimulator
GameArguments <|-- ConwayGameArguments
ConwayBoard --> ConwayGameArguments
ConwayBoard *--> "1..*" ConwayCell
ConwaySimulator --> ConwayBoard

@enduml
