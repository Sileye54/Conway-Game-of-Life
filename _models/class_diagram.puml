@startuml

class Conway {
  + initializeGame(args: String[])
  + run()
}

abstract Cell {
  + isStateSwitching(): Boolean
  + switchState()
}

abstract Board {
  + printBoard()
}

abstract Simulator {
  + simulate(board: ConwayBoard)
}

abstract GameArguments{
	+ loadArguments()
}
Class Position {
  - x: int
  - y: int
}

enum CellState {
  ALIVE
  DEAD
}

class ConwayCell {
  + isStateSwitching(): Boolean
  + switchState()
}

class ConwayBoard {
  - cells: ConwayCell[][]
  + printBoard()
  + getNeighborState(cell: Cell): Cell[]
}

class ConwaySimulator {
  + simulate(board: ConwayBoard)
}

class ConwayGameArguments{
	+ loadArguments()
}

Conway *--> ConwayBoard
Conway *--> ConwaySimulator
Conway *--> ConwayGameArguments
Cell <|-- ConwayCell
Board <|-- ConwayBoard
Simulator <|-- ConwaySimulator
GameArguments <|-- ConwayGameArguments
ConwayBoard --> ConwayGameArguments
ConwayBoard *--> "1..*" ConwayCell
ConwaySimulator --> ConwayBoard
ConwayCell --> Position
ConwayCell --> CellState

@enduml
